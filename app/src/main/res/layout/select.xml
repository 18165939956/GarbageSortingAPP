<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:background="#CCCCCC">

    <ImageButton
        android:id="@+id/ETTS_button"
        android:layout_width="250dp"
        android:layout_height="46dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edditext_shape01" />

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/change_style"
        android:text="主题"/>

    <EditText
        android:id="@+id/select01"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@null"

        android:hint="@string/hint_of_select"
        android:imeOptions="actionSearch"
        android:shadowColor="#9FF79C"
        android:shadowDx="10"
        android:shadowDy="5"
        android:shadowRadius="0.5"
        android:textColorHint="#919191"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/search"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-48dp"
        android:layout_toEndOf="@id/select01"
        android:background="#CCCCCC"
        android:scaleType="fitXY"
        android:src="@drawable/search" />


</RelativeLayout>