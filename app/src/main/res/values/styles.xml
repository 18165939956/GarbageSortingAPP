<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--灰色主题-->
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="myBgColor">@color/colorPrimaryDark</item>
        <item name="background">@color/colorPrimaryDark</item>
        <item name="myTextColor">@color/colorPrimaryDark</item>
        <item name="myButtonColor">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--紫色主题-->
    <style name="NightTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_200</item>
        <item name="colorAccent">@color/purple_200</item>
        <item name="myBgColor">@color/purple_200</item>
        <item name="background">@color/purple_200</item>
        <item name="myTextColor">@color/purple_200</item>
        <item name="myButtonColor">@color/purple_200</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>